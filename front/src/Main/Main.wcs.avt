:host {
	display: flex;
	flex-direction: column;
	height: 100%;
	position: relative;
	width: 100%;
	z-index: 1;

	.scroll {
		--scroller-right: 6px;
		--scroller-left: 6px;
		width: 100%;
		flex-grow: 1;
		min-height: 0;

		.scroll-wrapper {
			display: flex;
			flex-direction: column;
			height: 100%;
			min-height: calc(100vh - 65px);

			.content {
				flex-grow: 1;
				min-height: 0;
			}
		}
	}


}
