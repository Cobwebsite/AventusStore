import { OrgDetailsResource } from '../OrgDetailsResource.lib.avt';

namespace App.Http.Controllers.Org.Details {

	export class OrgDetailsController extends Aventus.HttpRoute {
		@BindThis()
		public async request(name: string | number): Promise<Aventus.ResultWithError<OrgDetailsResource>> {
			const request = new Aventus.HttpRequest(`${this.getPrefix()}/api/orgs/details/${name}`, Aventus.HttpMethod.GET);
			return await request.queryJSON<OrgDetailsResource>(this.router);
		}
	}

}