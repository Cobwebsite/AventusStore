import { Request } from './Request.lib.avt';
import { PackageSimpleResource } from '../PackageSimpleResource.lib.avt';

namespace App.Http.Controllers.Package.Search {

	export class PackageSearchController extends Aventus.HttpRoute {
		@BindThis()
		public async request(body: Request): Promise<Aventus.ResultWithError<PackageSimpleResource[]>> {
			const request = new Aventus.HttpRequest(`${this.getPrefix()}/api/package/search`, Aventus.HttpMethod.POST);
			request.setBody(body);
			return await request.queryJSON<PackageSimpleResource[]>(this.router);
		}
	}

}